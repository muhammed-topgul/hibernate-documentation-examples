<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">postgres</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/hibernatedocs</property>

        <mapping class="com.muhammedtopgul.hibernatedocs.entity.Contact"/>
        <mapping class="com.muhammedtopgul.hibernatedocs.entity.Product"/>
        <mapping class="com.muhammedtopgul.hibernatedocs.entity.Phone"/>
        <mapping class="com.muhammedtopgul.hibernatedocs.entity.Person"/>
        <mapping class="com.muhammedtopgul.hibernatedocs.entity.DateEvent"/>
        <mapping class="com.muhammedtopgul.hibernatedocs.entity.Event"/>
        <mapping class="com.muhammedtopgul.hibernatedocs.entity.Account"/>
        <mapping class="com.muhammedtopgul.hibernatedocs.entity.Client"/>
        <mapping class="com.muhammedtopgul.hibernatedocs.entity.User"/>
        <mapping class="com.muhammedtopgul.hibernatedocs.entity.Country"/>
        <mapping class="com.muhammedtopgul.hibernatedocs.entity.City"/>
    </session-factory>
</hibernate-configuration>